<p id="notice"><%= notice %></p>

<h1>Moedas</h1>
<h2><%= cookies[:curso] %><h2>
<h2><%= session[:curso] %><h2>
<table class="table table-hover">
  <thead>
    <tr>
      <!-- 
      <th><%= Coin.human_attribute_name(:description) %></th>
      <th><%= Coin.human_attribute_name(:acronym) %></th>
      <th><%= Coin.human_attribute_name(:url_image) %></th>
      -->

      <!-- outra forma, utilizando a variavel @coins-->
      <th><%= @coins.human_attribute_name(:description) %></th>
      <th><%= @coins.human_attribute_name(:acronym) %></th>
      <th><%= @coins.human_attribute_name(:url_image) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td><%= coin.description %></td>
        <td><%= coin.acronym %></td>
        <!-- <td><img src="<%= coin.url_image %>" width="60px" height="40px" /></td> -->
        <!-- <td><%= image_tag coin.url_image, width: 60, height: 40 %></td> -->
        <td><%= image_tag coin.url_image, size: "25x25" %></td>
        <td><%= link_to t('links.show'), coin %></td> <!-- rota show equivalente -->
        <!-- <td><%= link_to 'Mostrar', coin_path(coin) %></td> -->
        <td><%= link_to t('links.edit'), edit_coin_path(coin) %></td>
        <td><%= link_to t('links.delete'), coin, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

